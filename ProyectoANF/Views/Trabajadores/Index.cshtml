@model List<ProyectoANF.Models.Trabajadore>;

<div class="container my-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <h2 class="text-center mb-4">Nuestros Empleados</h2>
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Id</th>
                        <th>Nombre Completo</th>
                        <th>DUI</th>
                        <th>NIT</th>
                        <th>AFP</th>
                        <th>ISSS</th>
                        <th>Cargo</th>
                        <th>Salario Base</th>
                        <th>Fecha Contratación</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TrabajadorId</td>
                            <td>@item.Nombre</td>
                            <td>@item.Dui</td>
                            <td>@item.Nit</td>
                            <td>@item.Afp</td>
                            <td>@item.Isss</td>
                            <td>@item.Cargo</td>
                            <td>@item.SalarioBase.ToString("C")</td>
                            <td>@item.FechaContratacion.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="#" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
