@using System.Security.Claims;

@{
    ViewData["Title"] = "Mandaditos SV - Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sivar Delivery - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #682A7A; 
            --secondary-color: #9B4F96; 
            --accent-color: #F2C811; 
            --light-bg: #f9f9f9;
            --dark-text: #333;
            --light-text: #f8f9fa;
            --shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-bg);
            position: relative;
            min-height: 100vh;
            margin: 0;
            padding-bottom: 60px;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('/Imagenes/nueevoFondo.png');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                filter: blur(2px) brightness(0.9);
                z-index: -1;
            }

        .navbar {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: var(--shadow);
            padding: 1rem 0;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .brand-logo {
            max-height: 100px;
            transition: transform 0.3s;
        }

            .brand-logo:hover {
                transform: scale(1.05);
            }

        .page-title {
            color: var(--primary-color);
            font-weight: 700;
            margin: 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
            font-size: 1.8rem;
        }

        .logout-btn {
            background-color: var(--accent-color);
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        }

            .logout-btn:hover {
                background-color: #e74c3c;
                transform: translateY(-2px);
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
            }

        .dashboard-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: var(--shadow);
        }

        .section-title {
            font-size: 1.5rem;
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
            padding-bottom: 10px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background-color: var(--secondary-color);
            }

        .menu-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transition: all 0.4s ease;
            height: 100%;
            overflow: hidden;
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            border-bottom: 4px solid transparent;
        }

            .menu-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
                border-bottom: 4px solid var(--secondary-color);
            }

        .card-body {
            padding: 2rem;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .card-icon-wrapper {
            width: 80px;
            height: 80px;
            background-color: rgba(15, 90, 150, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .menu-card:hover .card-icon-wrapper {
            background-color: var(--primary-color);
            transform: scale(1.1) rotate(5deg);
        }

        .card-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            transition: all 0.3s ease;
        }

        .menu-card:hover .card-icon {
            color: white;
        }

        .card-title {
            color: var(--dark-text);
            font-weight: 600;
            margin-bottom: 1rem;
            font-size: 1.25rem;
        }

        .card-text {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
        }

        .card-btn {
            background-color: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s;
            margin-top: auto;
        }

        .menu-card:hover .card-btn {
            background-color: var(--primary-color);
            color: white;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: rgba(104, 42, 122, 0.9); /* Morado C# con transparencia */
            color: white;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
        }

        @@media (max-width: 767.98px) {
            .dashboard-container {
                padding: 1rem;
                margin: 1rem;
            }

            .page-title {
                font-size: 1.5rem;
            }

            .navbar {
                padding: 0.5rem 0;
            }

            .card-body {
                padding: 1.5rem 1rem;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/Imagenes/sivarDelivery.jpg" alt="Mandaditos SV" class="brand-logo">
                <h1 class="page-title">Sivar Delivery</h1>
            </a>

            <div class="ms-auto">
                <a asp-controller="Home" asp-action="Salir" class="logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <div class="container dashboard-container">
        <h2 class="section-title">Panel de Administración</h2>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="menu-card card h-100">
                    <div class="card-body">
                        <div class="card-icon-wrapper">
                            <i class="fas fa-user-plus card-icon"></i>
                        </div>
                        <h5 class="card-title">Registrar Empleados</h5>
                        <p class="card-text">Añade nuevos empleados al sistema con toda su información</p>
                        <a asp-controller="Trabajadores" asp-action="AgregarTrabajador" class="card-btn">
                            Añadir Empleado <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="menu-card card h-100">
                    <div class="card-body">
                        <div class="card-icon-wrapper">
                            <i class="fas fa-user card-icon"></i>
                        </div>
                        <h5 class="card-title">Lista de Empleados</h5>
                        <p class="card-text">Visualiza y gestiona todos los empleados activos en el sistema</p>
                        <a asp-controller="Trabajadores" asp-action="Index" class="card-btn">
                            Ver Empleados <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            

            <div class="col">
                <div class="menu-card card h-100">
                    <div class="card-body">
                        <div class="card-icon-wrapper">
                            <i class="fa-solid fa-dollar-sign card-icon"></i>
                        </div>
                        <h5 class="card-title">Generar Planilla</h5>
                        <p class="card-text">Crea y gestiona planillas de pago para cada empleado</p>
                        <a asp-controller="Planilla" asp-action="CrearPlanilla" class="card-btn">
                            Crear Planilla <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="menu-card card h-100">
                    <div class="card-body">
                        <div class="card-icon-wrapper">
                            <i class="fas fa-list-alt card-icon"></i>
                        </div>
                        <h5 class="card-title">Lista de Planillas</h5>
                        <p class="card-text">Consulta el historial completo de todas las planillas generadas</p>
                        <a asp-controller="Planilla" asp-action="ListaPlanillas" class="card-btn">
                            Ver Planillas <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Sivar Delivery | Sistema de Gestión de Planillas</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>