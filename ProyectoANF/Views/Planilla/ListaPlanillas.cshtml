@model PaginatedList<ProyectoANF.Models.Planilla>

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container-fluid py-5 bg-light">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4 text-custom-primary fw-bold">
                        <i class="bi bi-file-earmark-text me-2"></i>Registro de Planillas
                    </h2>
                    <a href="@Url.Action("Index", "Home")" class="home-link">
                        <i class="fas fa-arrow-left me-2"></i>Volver a inicio
                    </a>
                    <!-- Filtro y Botón Nueva Planilla -->
                    <div class="row mb-4 align-items-center">
                        <div class="col-md-6">
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-search text-custom-primary"></i>
                                </span>
                                <select class="form-select border-start-0" id="filtroTrabajador">
                                    <option value="">Todos los empleados</option>
                                    @{
                                        var trabajadoresUnicos = Model
                                        .Select(p => p.Trabajador)
                                        .Where(t => t != null)
                                        .DistinctBy(t => t.TrabajadorId)
                                        .OrderBy(t => t.Nombre);

                                        foreach (var trabajador in trabajadoresUnicos)
                                        {
                                            <option value="@trabajador.TrabajadorId">@trabajador.Nombre</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-controller="Planilla" asp-action="CrearPlanilla"
                               class="btn btn-custom-primary btn-lg shadow-sm">
                                <i class="bi bi-plus-circle me-2"></i>Nueva Planilla
                            </a>
                        </div>
                    </div>

                    <!-- Tabla de planillas alineada con el Excel -->
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="tablaPlanillas">
                            <thead>
                                <tr class="bg-custom-primary text-white">
                                    <th>Área</th>
                                    <th>Nombre</th> <!-- Nueva columna para el nombre del empleado -->
                                    <th>Cargo</th>
                                    <th>Ingreso a Empresa</th>
                                    <th>Fecha Corte</th>
                                    <th class="text-end">Salario Mensual</th>
                                    <th class="text-end">Viáticos u Otros</th>
                                    <th class="text-center">Meses</th>
                                    <th class="text-center">Tiempo en Empresa</th>
                                    <th class="text-end">Horas Extra Diurnas</th>
                                    <th class="text-end">Horas Extra Nocturnas</th>
                                    <th class="text-end">Incapacidad</th>
                                    <th class="text-end">Permisos</th>
                                    <th class="text-end">Vacaciones</th>
                                    <th class="text-end">Bono Vacaciones</th>
                                    <th class="text-end">Aguinaldo</th>
                                    <th class="text-end">Bono Aguinaldo</th>
                                    <th class="text-end">Monto Cotizable</th>
                                    <th class="text-end">ISSS Patronal</th>
                                    <th class="text-end">AFP Patronal</th>
                                    <th class="text-end">ISSS Empleado</th>
                                    <th class="text-end">AFP Empleado</th>
                                    <th class="text-end">Descuento Renta </th>
                                    <th class="text-end">Total Depositar</th>
                                    <th class="text-end">Monto Planilla Única</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white">
                                @foreach (var item in Model)
                                {
                                    // Calcular campos adicionales exactamente como en Excel

                                    // MESES = MONTH(D6) - El mes de la fecha de ingreso
                                    int mesDeIngreso = item.Trabajador?.FechaContratacion.Month ?? 0;

                                    // TIEMPO EN EMPRESA = (E6-D6)/365 - La diferencia entre la fecha de corte y la fecha de ingreso en años
                                    var fechaCorte = new DateOnly(item.Año, item.Mes, DateTime.DaysInMonth(item.Año, item.Mes));
                                    double añosAntiguedad = 0;
                                    if (item.Trabajador != null)
                                    {
                                        añosAntiguedad = (fechaCorte.ToDateTime(TimeOnly.MinValue) -
                                        item.Trabajador.FechaContratacion.ToDateTime(TimeOnly.MinValue)).TotalDays / 365.0;
                                    }

                                    // Calcular el bono de vacaciones según la lógica del Excel
                                    decimal bonoVacaciones = 0;
                                    if (item.Trabajador != null && item.Mes == 12 && mesDeIngreso == 12)
                                    {
                                        if (añosAntiguedad <= 2)
                                            bonoVacaciones = 0;
                                        else if (añosAntiguedad < 5)
                                            bonoVacaciones = (item.Trabajador.SalarioBase / 2) * 0.05m;
                                        else
                                            bonoVacaciones = (item.Trabajador.SalarioBase / 2) * 0.3m;
                                    }

                                    // Calcular el bono de aguinaldo según la lógica del Excel
                                    decimal bonoAguinaldo = 0;
                                    if (item.Trabajador != null && item.Mes == 12 && mesDeIngreso == 12 && añosAntiguedad > 3)
                                    {
                                        bonoAguinaldo = item.Trabajador.SalarioBase - (item.Aguinaldo ?? 0);
                                    }

                                    // Calcular ISSS Patronal y AFP Patronal exactamente como en Excel
                                    decimal isssPatronal = (item.SalarioBruto ?? 0) > 1000 ? 75 : (item.SalarioBruto ?? 0) * 0.075m;
                                    decimal afpPatronal = (item.SalarioBruto ?? 0) * 0.0875m;
                                    decimal montoPlanillaUnica = isssPatronal + afpPatronal + (item.Isss ?? 0) + (item.Afp ?? 0);

                                    // Obtener el área como la primera palabra del cargo
                                    string area = item.Trabajador?.Cargo?.Split(' ').FirstOrDefault() ?? "N/A";

                                    <tr data-empleado-id="@item.TrabajadorId" class="border-bottom">
                                        <td>@area</td>
                                        <td>@(item.Trabajador?.Nombre ?? "N/A")</td> <!-- Mostrar el nombre del empleado -->
                                        <td>@(item.Trabajador?.Cargo ?? "N/A")</td>
                                        <td>@(item.Trabajador?.FechaContratacion.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                        <td>@(fechaCorte.ToString("dd/MM/yyyy"))</td>
                                        <td class="text-end">@(item.Trabajador?.SalarioBase.ToString("C") ?? "$0.00")</td>
                                        <td class="text-end">@((item.Feriado ?? 0).ToString("C"))</td>
                                        <td class="text-center">@mesDeIngreso</td>
                                        <td class="text-center">@añosAntiguedad.ToString("F2")</td>
                                        <td class="text-end">@((item.HorasDiurnas ?? 0).ToString("C"))</td>
                                        <td class="text-end">@((item.HorasNocturnas ?? 0).ToString("C"))</td>
                                        <td class="text-end">
                                            @if ((item.Incapacidad ?? 0) > 0)
                                            {
                                                <span title="@item.IncapacidadTipo">@((item.Incapacidad ?? 0).ToString("C")) (@item.IncapacidadDias días)</span>
                                            }
                                            else
                                            {
                                                @((item.Incapacidad ?? 0).ToString("C"))
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if ((item.Permisos ?? 0) > 0)
                                            {
                                                <span title="@item.PermisosTipo">@((item.Permisos ?? 0).ToString("C")) (@item.PermisosDias días)</span>
                                            }
                                            else
                                            {
                                                @((item.Permisos ?? 0).ToString("C"))
                                            }
                                        </td>
                                        <td class="text-end">@((item.Vacaciones ?? 0).ToString("C"))</td>
                                        <td class="text-end">@(bonoVacaciones.ToString("C"))</td>
                                        <td class="text-end">@((item.Aguinaldo ?? 0).ToString("C"))</td>
                                        <td class="text-end">@(bonoAguinaldo.ToString("C"))</td>
                                        <td class="text-end">@((item.SalarioBruto ?? 0).ToString("C"))</td>
                                        <td class="text-end">@(isssPatronal.ToString("C"))</td>
                                        <td class="text-end">@(afpPatronal.ToString("C"))</td>
                                        <td class="text-end">@((item.Isss ?? 0).ToString("C"))</td>
                                        <td class="text-end">@((item.Afp ?? 0).ToString("C"))</td>
                                        <td class="text-end">@((item.Renta ?? 0).ToString("C"))</td>
                                        <td class="text-end fw-bold text-success">@((item.SalarioNeto ?? 0).ToString("C"))</td>
                                        <td class="text-end">@(montoPlanillaUnica.ToString("C"))</td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a asp-controller="Planilla" asp-action="GenerarPDF"
                                                   asp-route-id="@item.PlanillaId"
                                                   class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-file-pdf me-1"></i>PDF
                                                </a>
                                                <a asp-controller="Planilla" asp-action="EnviarPlanillaPorCorreo"
                                                   asp-route-id="@item.PlanillaId"
                                                   class="btn btn-outline-custom-primary btn-sm">
                                                    <i class="bi bi-envelope me-1"></i>Enviar
                                                </a>
                                                <a asp-controller="Planilla" asp-action="EditarPlanilla"
                                                   asp-route-id="@item.PlanillaId"
                                                   class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-pencil me-1"></i>Editar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="bg-light fw-bold">
                                    <td colspan="5" class="text-end">TOTALES:</td> <!-- Aumentado de 4 a 5 para incluir la columna de Nombre -->
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalSalarioBase).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalViaticos).ToString("C"))</td>
                                    <td colspan="2"></td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalHorasDiurnas).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalHorasNocturnas).ToString("C"))</td>
                                    <td colspan="2"></td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalVacaciones).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalBonoVacaciones).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalAguinaldo).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalBonoAguinaldo).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalMontoCotizable).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalIsssPatronal).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalAfpPatronal).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalIsssEmpleado).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalAfpEmpleado).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalDepositar).ToString("C"))</td>
                                    <td class="text-end">@(((decimal)((dynamic)ViewData["Totales"]).TotalPlanillaUnica).ToString("C"))</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                    </div>

                    <!-- Paginación -->
                    <nav aria-label="Paginación" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link shadow-sm" asp-action="ListaPlanillas"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-left"></i>
                                    </span>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.PageIndex)
                                {
                                    <li class="page-item active" aria-current="page">
                                        <span class="page-link shadow-sm">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link shadow-sm" asp-action="ListaPlanillas"
                                           asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link shadow-sm" asp-action="ListaPlanillas"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="fas fa-chevron-right"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
