@model ProyectoANF.Models.Planilla
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Planilla - Sivar Delivery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #682A7A;
            --secondary-color: #9B4F96;
            --accent-color: #F2C811;
            --light-bg: #f6f5f7;
            --dark-text: #333;
            --light-text: #f8f9fa;
            --shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            --input-border: #e2e8f0;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #F6F5F7 0%, #E8E0EC 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: url('/Imagenes/mandaditos.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                filter: blur(3px) brightness(0.8);
                opacity: 0.3;
                z-index: -1;
            }

        .page-container {
            width: 100%;
            max-width: 900px;
            position: relative;
            z-index: 1;
        }

        .header-bar {
            background-color: var(--primary-color);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .header-title {
            font-size: 1.6rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .header-icon {
            font-size: 1.8rem;
            margin-right: 1rem;
            background-color: rgba(255, 255, 255, 0.2);
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .logo {
            max-height: 40px;
        }

        .form-card {
            background-color: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 0 0 15px 15px;
            box-shadow: var(--shadow);
            padding: 2rem;
        }

        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(104, 42, 122, 0.1);
        }

            .form-section:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
        }

            .section-title i {
                margin-right: 0.75rem;
                opacity: 0.8;
            }

        .form-label {
            font-weight: 500;
            color: var(--dark-text);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control, .form-select {
            border: 1.5px solid var(--input-border);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.8);
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 3px rgba(155, 79, 150, 0.1);
                background-color: white;
            }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--secondary-color);
                opacity: 0.7;
            }

            .input-icon input, .input-icon select {
                padding-left: 2.5rem;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group:last-child {
                margin-bottom: 0;
            }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 0.85rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(155, 79, 150, 0.2);
        }

            .btn-primary:hover, .btn-primary:focus {
                background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(155, 79, 150, 0.3);
            }

        .btn-secondary {
            background: linear-gradient(45deg, #718096, #a0aec0);
            border: none;
            padding: 0.85rem;
            font-weight: 600;
            border-radius: 8px;
            transition: transform 0.2s ease;
            width: 100%;
        }

            .btn-secondary:hover, .btn-secondary:focus {
                background-color: #4a5568;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(113, 128, 150, 0.3);
            }

        .alert {
            border-radius: 8px;
            border: none;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
        }

        .alert-success {
            background-color: #d4edda;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .home-link {
            display: inline-flex;
            align-items: center;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            margin-top: 1.5rem;
            transition: all 0.2s ease;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            background-color: rgba(155, 79, 150, 0.1);
        }

            .home-link:hover {
                color: white;
                background-color: var(--primary-color);
                transform: translateX(-5px);
            }

            .home-link i {
                margin-right: 0.5rem;
                transition: transform 0.2s ease;
            }

            .home-link:hover i {
                transform: translateX(-3px);
            }

        input[type="number"] {
            -moz-appearance: textfield;
        }

            input[type="number"]::-webkit-outer-spin-button,
            input[type="number"]::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

        .auto-calc-info {
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 0.3rem;
            display: block;
        }

            .auto-calc-info i {
                margin-right: 0.3rem;
                color: var(--secondary-color);
            }

        .tooltip-icon {
            display: inline-block;
            margin-left: 0.5rem;
            color: var(--secondary-color);
            cursor: pointer;
        }

        .currency-input:focus, .date-input:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 3px rgba(155, 79, 150, 0.2);
        }

        .date-input {
            cursor: pointer;
        }

        input.is-invalid {
            border-color: #dc3545;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(.375em + .1875rem) center;
            background-size: calc(.75em + .375rem) calc(.75em + .375rem);
        }

        @@media (max-width: 767.98px) {
            .page-container {
                max-width: 100%;
            }

            .header-bar {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .header-title {
                justify-content: center;
            }

            .form-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="header-bar">
            <div class="header-title">
                <i class="fas fa-file-invoice-dollar header-icon"></i>
                Editar Planilla
            </div>
            <img src="/Imagenes/sivarDelivery.jpg" alt="Sivar Delivery" class="logo">
        </div>

        <div class="form-card">
            <form asp-controller="Planilla" asp-action="EditarPlanilla" method="post" id="planillaForm">
                <input type="hidden" asp-for="PlanillaId" />

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información General
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TrabajadorId" class="form-label">Trabajador</label>
                                <div class="input-icon">
                                    <i class="fas fa-user"></i>
                                    <select asp-for="TrabajadorId" class="form-select" required
                                            asp-items="@(new SelectList((IEnumerable<ProyectoANF.Models.Trabajadore>)ViewData["Trabajadores"], "TrabajadorId", "Nombre", Model.TrabajadorId))">
                                        <option value="">Seleccione un trabajador</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Mes" class="form-label">
                                    Mes
                                    <i class="fas fa-info-circle tooltip-icon" title="El mes afecta el cálculo de vacaciones y aguinaldo (solo en Diciembre)"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar"></i>
                                    <input class="form-control" type="number" required min="1" max="12" asp-for="Mes"
                                           pattern="\d{1,2}" title="Ingrese un mes válido (1-12)" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>En Diciembre (mes 12) se calculan automáticamente vacaciones y aguinaldo
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Año" class="form-label">Año</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                    <input class="form-control year-input" type="number" required min="2000" max="2100" asp-for="Año"
                                           pattern="\d{4}" title="Ingrese un año válido de 4 dígitos" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-clock"></i>
                        Tiempo Laborado
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DiasTrabajados" class="form-label">Días trabajados</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-check"></i>
                                    <input class="form-control" type="number" required min="1" max="30" asp-for="DiasTrabajados"
                                           pattern="\d{1,2}" title="Ingrese un número entre 1 y 30" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="HorasDiurnasCantidad" class="form-label">
                                    Horas extra diurnas
                                    <i class="fas fa-info-circle tooltip-icon" title="Se pagan al doble del valor hora normal (Salario/30/8*2)"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-sun"></i>
                                    <input class="form-control" type="number" required min="0" step="1" asp-for="HorasDiurnasCantidad"
                                           title="Ingrese la cantidad de horas extra diurnas" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>Se calcula como: (Salario/30/8)*2*cantidad de horas
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="HorasNocturnasCantidad" class="form-label">
                                    Horas extra nocturnas
                                    <i class="fas fa-info-circle tooltip-icon" title="Se pagan al 2.5 del valor hora normal (Salario/30/8*2.5)"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-moon"></i>
                                    <input class="form-control" type="number" required min="0" step="1" asp-for="HorasNocturnasCantidad"
                                           title="Ingrese la cantidad de horas extra nocturnas" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>Se calcula como: (Salario/30/8)*2.5*cantidad de horas
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-money-bill-wave"></i>
                        Compensaciones y Deducciones
                    </h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FeriadoCantidad" class="form-label">
                                    Feriados
                                    <i class="fas fa-info-circle tooltip-icon" title="Se pagan al doble del valor hora normal"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-star"></i>
                                    <input class="form-control currency-input" type="number" required min="0" step="0.01" asp-for="FeriadoCantidad"
                                           title="Ingrese el monto por feriados" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>Se calcula como: (Salario/30/8)*2*cantidad
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Reintegro" class="form-label">Reintegro ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-undo"></i>
                                    <input class="form-control currency-input" type="number" required min="0" step="0.01" asp-for="Reintegro"
                                           title="Ingrese el monto de reintegro" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nuevos campos para Incapacidad y Permisos basados en días -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="IncapacidadDias">
                                    Días de Incapacidad
                                    <i class="fas fa-info-circle tooltip-icon" title="Ingrese la cantidad de días de incapacidad. Para incapacidad común, la empresa paga los primeros 3 días al 75% del salario."></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-first-aid"></i>
                                    <input class="form-control" type="number" placeholder="0.00" required min="0" step="0.5" max="30" asp-for="IncapacidadDias"
                                           title="Ingrese la cantidad de días de incapacidad" />
                                </div>
                                <div class="mt-2">
                                    <select class="form-select" asp-for="IncapacidadTipo" id="incapacidadTipo">
                                        <option value="Común">Incapacidad Común</option>
                                        <option value="Profesional">Incapacidad Profesional</option>
                                    </select>
                                    <span class="auto-calc-info">
                                        <i class="fas fa-calculator"></i>Común: Empresa paga primeros 3 días al 75%. Profesional: ISSS paga desde día 1
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="PermisosDias">
                                    Días de Permisos
                                    <i class="fas fa-info-circle tooltip-icon" title="Ingrese la cantidad de días de permiso. Los permisos con goce de sueldo se pagan al 100%, los sin goce se descuentan."></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-file-signature"></i>
                                    <input class="form-control" type="number" placeholder="0.00" required min="0" step="0.5" max="30" asp-for="PermisosDias"
                                           title="Ingrese la cantidad de días de permiso" />
                                </div>
                                <div class="mt-2">
                                    <select class="form-select" asp-for="PermisosTipo" id="permisosTipo">
                                        <option value="Con Goce">Con Goce de Sueldo</option>
                                        <option value="Sin Goce">Sin Goce de Sueldo</option>
                                    </select>
                                    <span class="auto-calc-info">
                                        <i class="fas fa-calculator"></i>Con Goce: se paga completo. Sin Goce: se descuenta de días trabajados
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Campos ocultos para los montos calculados -->
                    <input type="hidden" asp-for="Incapacidad" id="incapacidadMonto" />
                    <input type="hidden" asp-for="Permisos" id="permisosMonto" />

                    <!-- Sección para mostrar los montos calculados (informativo) -->
                    <div class="row mt-3" id="montosCalculadosContainer" style="display: none;">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong>Monto por Incapacidad:</strong> <span id="montoIncapacidadCalculado">$0.00</span>
                                    </div>
                                    <div>
                                        <strong>Monto por Permisos:</strong> <span id="montoPermisosCalculado">$0.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-gift"></i>
                        Beneficios Adicionales
                        <i class="fas fa-info-circle tooltip-icon" title="Estos valores pueden calcularse automáticamente según la antigüedad del empleado"></i>
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Vacaciones" class="form-label">
                                    Vacaciones ($)
                                    <i class="fas fa-info-circle tooltip-icon" title="Solo se calcula en Diciembre para empleados con más de 1 año de antigüedad"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-umbrella-beach"></i>
                                    <input class="form-control currency-input" type="number" required min="0" step="0.01" asp-for="Vacaciones"
                                           title="Deje en 0 para cálculo automático o ingrese un valor manual" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>En Diciembre: 15 días (Salario/2) + bono según antigüedad
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Indemnizacion" class="form-label">Indemnización ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-hand-holding-usd"></i>
                                    <input class="form-control currency-input" type="number" required min="0" step="0.01" asp-for="Indemnizacion"
                                           title="Ingrese el monto de indemnización si aplica" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Aguinaldo" class="form-label">
                                    Aguinaldo ($)
                                    <i class="fas fa-info-circle tooltip-icon" title="Solo se calcula en Diciembre y varía según antigüedad"></i>
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-gift"></i>
                                    <input class="form-control currency-input" type="number" required min="0" step="0.01" asp-for="Aguinaldo"
                                           title="Deje en 0 para cálculo automático o ingrese un valor manual" />
                                </div>
                                <span class="auto-calc-info">
                                    <i class="fas fa-calculator"></i>Varía según años: <1 año (proporcional), 1-3 años (medio salario), 3-10 años (19 días),>10 años (21 días)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>


                                           <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Guardar Cambios
                </button>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger mt-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewData["Error"]
                </div>
            }
            else if (ViewData["Completado"] != null)
            {
                <div class="alert alert-success mt-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@ViewData["Completado"]
                </div>
            }
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("ListaPlanillas", "Planilla")" class="home-link">
                <i class="fas fa-arrow-left"></i>Volver a Planillas
            </a>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Validación de formato para el año (4 dígitos)
        const yearInput = document.querySelector('.year-input');
        yearInput.addEventListener('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '').substring(0, 4);
            validateYearInput(this);
        });

        yearInput.addEventListener('blur', function() {
            validateYearInput(this);
        });

        function validateYearInput(input) {
            const year = parseInt(input.value);
            if (isNaN(year) || year < 2000 || year > 2100) {
                input.classList.add('is-invalid');
            } else {
                input.classList.remove('is-invalid');
            }
        }

        // Formateo de campos monetarios
        const currencyInputs = document.querySelectorAll('.currency-input');
        currencyInputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value && !isNaN(this.value)) {
                    this.value = parseFloat(this.value).toFixed(2);
                }
            });
        });

        // Validación de formulario
        const form = document.getElementById('planillaForm');
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();

                // Resaltar campos con error
                const invalidInputs = form.querySelectorAll(':invalid');
                invalidInputs.forEach(input => {
                    input.classList.add('is-invalid');

                    // Scroll al primer campo inválido
                    if (invalidInputs[0]) {
                        invalidInputs[0].scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }
                });
            }

            form.classList.add('was-validated');
        });

        // Quitar clase de inválido al corregir
        const inputs = form.querySelectorAll('input, select');
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                }
            });
        });

        // Formateo del campo mes (1-12)
        const mesInput = document.querySelector('input[name="Mes"]');
        mesInput.addEventListener('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '').substring(0, 2);
            const mes = parseInt(this.value);
            if (!isNaN(mes)) {
                if (mes > 12) this.value = "12";
                if (mes < 1) this.value = "1";
            }
        });

        // Pre-formatear los valores monetarios al cargar
        window.addEventListener('load', function() {
            currencyInputs.forEach(input => {
                if (input.value && !isNaN(input.value)) {
                    input.value = parseFloat(input.value).toFixed(2);
                }
            });
        });

        // Referencias a elementos para incapacidad y permisos
        const incapacidadDiasInput = document.getElementById('IncapacidadDias');
        const permisosDiasInput = document.getElementById('PermisosDias');
        const incapacidadTipoSelect = document.getElementById('incapacidadTipo');
        const permisosTipoSelect = document.getElementById('permisosTipo');
        const trabajadorSelect = document.getElementById('TrabajadorId');
        const montosContainer = document.getElementById('montosCalculadosContainer');
        const montoIncapacidadSpan = document.getElementById('montoIncapacidadCalculado');
        const montoPermisosSpan = document.getElementById('montoPermisosCalculado');
        
        // Mapa para almacenar salarios base por trabajador
        const salariosPorTrabajador = {};
        
        // Función para calcular montos de incapacidad y permisos
        function calcularMontos() {
            if (!trabajadorSelect.value) return;
            
            const salarioBase = salariosPorTrabajador[trabajadorSelect.value] || 0;
            if (salarioBase <= 0) return;
            
            const salarioDiario = salarioBase / 30;
            let montoIncapacidad = 0;
            let montoPermisos = 0;
            
            // Calcular incapacidad
            const diasIncapacidad = parseFloat(incapacidadDiasInput.value) || 0;
            if (diasIncapacidad > 0) {
                if (incapacidadTipoSelect.value === 'Común') {
                    const diasACargoDeLaEmpresa = Math.min(diasIncapacidad, 3);
                    montoIncapacidad = diasACargoDeLaEmpresa * (salarioDiario * 0.75);
                }
                // Para incapacidad profesional, monto = 0 (va por ISSS)
            }
            
            // Calcular permisos
            const diasPermisos = parseFloat(permisosDiasInput.value) || 0;
            if (diasPermisos > 0 && permisosTipoSelect.value === 'Con Goce') {
                montoPermisos = diasPermisos * salarioDiario;
            }
            
            // Actualizar información en pantalla
            montoIncapacidadSpan.textContent = '$' + montoIncapacidad.toFixed(2);
            montoPermisosSpan.textContent = '$' + montoPermisos.toFixed(2);
            
            // Mostrar contenedor de montos si hay algún valor
            if (diasIncapacidad > 0 || diasPermisos > 0) {
                montosContainer.style.display = 'block';
            } else {
                montosContainer.style.display = 'none';
            }
        }
        
        // Cargar salarios de trabajadores cuando se carga la página
        if (trabajadorSelect) {
            // Esto es un ejemplo simplificado. En una implementación real, se obtendría
            // esta información del servidor mediante una llamada AJAX o datos precargados.
            // Aquí asumimos un salario promedio de 500 para todos los trabajadores.
            Array.from(trabajadorSelect.options).forEach(option => {
                if (option.value) {
                    salariosPorTrabajador[option.value] = 500; // Salario base ejemplo
                }
            });
            
            trabajadorSelect.addEventListener('change', calcularMontos);
        }
        
        // Eventos para recalcular cuando cambian los valores
        if (incapacidadDiasInput) incapacidadDiasInput.addEventListener('input', calcularMontos);
        if (permisosDiasInput) permisosDiasInput.addEventListener('input', calcularMontos);
        if (incapacidadTipoSelect) incapacidadTipoSelect.addEventListener('change', calcularMontos);
        if (permisosTipoSelect) permisosTipoSelect.addEventListener('change', calcularMontos);
        
        // Calcular montos iniciales
        calcularMontos();
        
        // Validar que los días de permisos sin goce no excedan los días trabajados
        const validarPermisosSinGoce = function() {
            if (!permisosDiasInput || !permisosTipoSelect) return;
            
            const diasPermisos = parseFloat(permisosDiasInput.value) || 0;
            const diasTrabajados = parseInt(document.querySelector('input[name="DiasTrabajados"]')?.value) || 0;
            
            if (permisosTipoSelect.value === 'Sin Goce' && diasPermisos > diasTrabajados) {
                permisosDiasInput.setCustomValidity('Los días de permiso sin goce no pueden exceder los días trabajados');
            } else {
                permisosDiasInput.setCustomValidity('');
            }
        };
        
        if (permisosDiasInput && permisosTipoSelect) {
            permisosDiasInput.addEventListener('input', validarPermisosSinGoce);
            permisosTipoSelect.addEventListener('change', validarPermisosSinGoce);
            document.querySelector('input[name="DiasTrabajados"]')?.addEventListener('input', validarPermisosSinGoce);
        }

        // Inicializar montos y visibilidad en la carga de la página
        if (incapacidadDiasInput && parseFloat(incapacidadDiasInput.value) > 0 || 
            permisosDiasInput && parseFloat(permisosDiasInput.value) > 0) {
            montosContainer.style.display = 'block';
        }
    });
</script>

