@model ProyectoANF.Models.Planilla
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Planilla - Sivar Delivery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #682A7A;
            --secondary-color: #9B4F96;
            --accent-color: #F2C811;
            --light-bg: #f6f5f7;
            --dark-text: #333;
            --light-text: #f8f9fa;
            --shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            --input-border: #e2e8f0;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #F6F5F7 0%, #E8E0EC 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem 1rem;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: url('/Imagenes/mandaditos.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                filter: blur(3px) brightness(0.8);
                opacity: 0.3;
                z-index: -1;
            }

        .page-container {
            width: 100%;
            max-width: 900px;
            position: relative;
            z-index: 1;
        }

        .header-bar {
            background-color: var(--primary-color);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .header-title {
            font-size: 1.6rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .header-icon {
            font-size: 1.8rem;
            margin-right: 1rem;
            background-color: rgba(255, 255, 255, 0.2);
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .logo {
            max-height: 40px;
        }

        .form-card {
            background-color: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 0 0 15px 15px;
            box-shadow: var(--shadow);
            padding: 2rem;
        }

        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(104, 42, 122, 0.1);
        }

            .form-section:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .section-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
        }

            .section-title i {
                margin-right: 0.75rem;
                opacity: 0.8;
            }

        .form-label {
            font-weight: 500;
            color: var(--dark-text);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control, .form-select {
            border: 1.5px solid var(--input-border);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.8);
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 3px rgba(155, 79, 150, 0.1);
                background-color: white;
            }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--secondary-color);
                opacity: 0.7;
            }

            .input-icon input, .input-icon select {
                padding-left: 2.5rem;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group:last-child {
                margin-bottom: 0;
            }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 0.85rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(155, 79, 150, 0.2);
        }

            .btn-primary:hover, .btn-primary:focus {
                background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(155, 79, 150, 0.3);
            }

        .btn-secondary {
            background-color: #718096;
            color: white;
            border: none;
            padding: 0.85rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(113, 128, 150, 0.2);
        }

            .btn-secondary:hover, .btn-secondary:focus {
                background-color: #4a5568;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(113, 128, 150, 0.3);
            }

        .alert {
            border-radius: 8px;
            border: none;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
        }

        .alert-success {
            background-color: #d4edda;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .home-link {
            display: inline-flex;
            align-items: center;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            margin-top: 1.5rem;
            transition: all 0.2s ease;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            background-color: rgba(155, 79, 150, 0.1);
        }

            .home-link:hover {
                color: white;
                background-color: var(--primary-color);
                transform: translateX(-5px);
            }

            .home-link i {
                margin-right: 0.5rem;
                transition: transform 0.2s ease;
            }

            .home-link:hover i {
                transform: translateX(-3px);
            }

        input[type="number"] {
            -moz-appearance: textfield;
        }

            input[type="number"]::-webkit-outer-spin-button,
            input[type="number"]::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

        @@media (max-width: 767.98px) {
            .page-container {
                max-width: 100%;
            }

            .header-bar {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .header-title {
                justify-content: center;
            }

            .form-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="header-bar">
            <div class="header-title">
                <i class="fas fa-file-invoice-dollar header-icon"></i>
                Editar Planilla
            </div>
            <img src="/Imagenes/sivarDelivery.jpg" alt="Sivar Delivery" class="logo">
        </div>

        <div class="form-card">
            <form asp-controller="Planilla" asp-action="EditarPlanilla" method="post">
                <input type="hidden" asp-for="PlanillaId" />

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información General
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TrabajadorId" class="form-label">Trabajador</label>
                                <div class="input-icon">
                                    <i class="fas fa-user"></i>
                                    <select asp-for="TrabajadorId" class="form-select"
                                            asp-items="@(new SelectList((IEnumerable<ProyectoANF.Models.Trabajadore>)ViewData["Trabajadores"], "TrabajadorId", "Nombre", Model.TrabajadorId))">
                                        <option value="">Seleccione un trabajador</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Mes" class="form-label">Mes</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar"></i>
                                    <input class="form-control" type="number" required min="1" max="12" asp-for="Mes" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Año" class="form-label">Año</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                    <input class="form-control" type="number" required min="2000" max="2100" asp-for="Año" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-clock"></i>
                        Tiempo Laborado
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DiasTrabajados" class="form-label">Días trabajados</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-check"></i>
                                    <input class="form-control" type="number" required min="1" max="30" asp-for="DiasTrabajados" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="HorasDiurnasCantidad" class="form-label">Horas extra diurnas</label>
                                <div class="input-icon">
                                    <i class="fas fa-sun"></i>
                                    <input class="form-control" type="number" required min="0" asp-for="HorasDiurnasCantidad" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="HorasNocturnasCantidad" class="form-label">Horas extra nocturnas</label>
                                <div class="input-icon">
                                    <i class="fas fa-moon"></i>
                                    <input class="form-control" type="number" required min="0" asp-for="HorasNocturnasCantidad" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-money-bill-wave"></i>
                        Compensaciones y Deducciones
                    </h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FeriadoCantidad" class="form-label">Feriados ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-calendar-star"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="FeriadoCantidad" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Reintegro" class="form-label">Reintegro ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-undo"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Reintegro" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Incapacidad" class="form-label">Incapacidad ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-user-injured"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Incapacidad" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Permisos" class="form-label">Permisos ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-door-open"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Permisos" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-gift"></i>
                        Beneficios Adicionales
                    </h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Vacaciones" class="form-label">Vacaciones ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-umbrella-beach"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Vacaciones" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Indemnizacion" class="form-label">Indemnización ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-hand-holding-usd"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Indemnizacion" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Aguinaldo" class="form-label">Aguinaldo ($)</label>
                                <div class="input-icon">
                                    <i class="fas fa-gift"></i>
                                    <input class="form-control" type="number" required min="0" step="0.01" asp-for="Aguinaldo" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger mt-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewData["Error"]
                    </div>
                }
                else if (ViewData["Completado"] != null)
                {
                    <div class="alert alert-success mt-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@ViewData["Completado"]
                    </div>
                }
            </form>

            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="home-link">
                    <i class="fas fa-arrow-left"></i>Volver al Dashboard
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>